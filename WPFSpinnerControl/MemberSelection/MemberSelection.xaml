                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:WPFSpinnerControl.MemberSelection">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="..\Theme.xaml"/>
    </ResourceDictionary.MergedDictionaries>

